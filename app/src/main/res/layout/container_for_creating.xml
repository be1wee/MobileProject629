<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerForCreating"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="bottom"
    android:background="#DFDFDF"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="visible">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/create_block_var"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:text="@string/variable"

                android:textAllCaps="true"
                android:textColor="#680000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/create_block_int"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:text="@string/integer"

                android:textAllCaps="true"
                android:textColor="#680000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/create_block_equal"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:text="@string/equal"

                android:textAllCaps="true"
                android:textColor="#680000"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>